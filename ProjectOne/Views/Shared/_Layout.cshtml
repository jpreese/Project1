<!DOCTYPE html>
<html>
<head>
    <title>CIS525 Website</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link id="pagestyle" rel="stylesheet" href="~/StaticContent/defaultstyle.css">
    <script type="text/javascript">

        function swapStyle(fileName) {
            document.getElementById("pagestyle").setAttribute('href', "/StaticContent/" + fileName);
        }

    </script>
</head>
<body>
    <!-- title section -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">John Reese</a>
            </div>
        </div>
    </nav>

    @RenderBody()

    <!-- theme selector section -->
    <div class="container">
        <div class="row spacer">
            <div class="col-md-12">
                <p><b>Tired of this color scheme?  Click on the name of the theme to alter the look and feel of the website.</b></p>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <td><h4>Theme Name</h4></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td onclick="swapStyle('defaultstyle.css');">
                                <a href="#">Default Theme</a>
                            </td>
                        </tr>
                        <tr>
                            <td onclick="swapStyle('greenstyle.css');">
                                <a href="#">Green Theme</a>
                            </td>
                        </tr>
                        <tr>
                            <td onclick="swapStyle('purplestyle.css');">
                                <a href="#">Purple Theme</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- footer section -->
    <div class="container">
        <hr>
        <footer>
            <p>&copy; John Reese 2015</p>
        </footer>
    </div>
</body>
</html>
